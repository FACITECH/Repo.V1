@model ApartMentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Delete Apartment</h2>
<form asp-action="Delete" method="post" asp-controller="Apartments">
    <div>Name: @Model.Number</div>
    <div>Name: @Model.BlockName</div>
    <input type="submit" value="Delete" />
    <input type="hidden" asp-for="ApartMentId" value=@Model.ApartMentId />
</form>
<div>
    <a asp-action="Details" asp-controller="Communities" asp-route-communityId="@Model.CommunityId">Back to community</a>
</div>
