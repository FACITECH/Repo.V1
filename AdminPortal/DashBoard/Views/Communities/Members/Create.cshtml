@model MemberViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create New Member";
}
<h2>Create Member</h2>
<form asp-action="Create" asp-controller="Members" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <table>
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><input asp-for="Name" placeholder="Name" /></td>
            <td><span asp-validation-for="Name"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Email"></label></td>
            <td><input asp-for="Email" placeholder="Email" /></td>
            <td><span asp-validation-for="Email"></span></td>
        </tr>
        <tr>
            <td><label asp-for="PhoneNumber1"></label></td>
            <td><input asp-for="PhoneNumber1" placeholder="PhoneNumber1" /></td>
            <td><span asp-validation-for="PhoneNumber1"></span></td>
        </tr>
        <tr>
            <td><label asp-for="PhoneNumber2"></label></td>
            <td><input asp-for="PhoneNumber2" placeholder="PhoneNumber2" /></td>
            <td><span asp-validation-for="PhoneNumber2"></span></td>
        </tr>
        <tr>
            <td><label asp-for="IsAssociationMember"></label></td>
            <td><input type="checkbox" asp-for="IsAssociationMember" /></td>
        </tr>
        <tr><td><input type="hidden" asp-for="ApartmentId" value=@Model.ApartmentId /></td></tr>
    </table>
    <input type="submit" value="Create" />
</form>
<div>
    <a asp-action="Index" asp-controller="Members" asp-route-communityId="@Model.ApartmentId">Back to Members</a>
</div>
