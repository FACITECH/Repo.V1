@model MemberViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Delete Member</h2>
<form asp-action="Delete" method="post" asp-controller="Members">
    <div>Name: @Model.Name</div>
    <div>Email: @Model.Email</div>
    <div>ApartmentId: @Model.ApartmentId</div>
    <input type="submit" value="Delete" />
    <input type="hidden" asp-for="ApartmentId" value=@Model.ApartmentId />
</form>
<div>
    <a asp-action="Index" asp-controller="Members" asp-route-id="@Model.ApartmentId">Back to Members</a>
</div>
