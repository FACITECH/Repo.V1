@model IEnumerable<DashBoard.Models.Section>
<p>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <h1>
        The sections page.
    </h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
    <div>
        <table style="width:100%">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Zone</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
                @foreach (var sect in Model)
                {
                    <tr>
                        <td>@sect.Id</td>
                        <td>@sect.Name</td>
                        <td>@sect.Zone</td>
                        <td><a asp-action="Edit" asp-route-id="@sect.Id">Edit</a></td>
                        <td><a asp-action="Delete" asp-route-id="@sect.Id">Delete</a></td>
                    </tr>
                }
        </table>
    </div>
</p>