@model DashBoard.Models.SubAreaViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = $"Edit Sub-Area - {Model.Name}";
}
<h2>Edit Sub-Area</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>
    <table>
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><input asp-for="Name" value="@Model.Name" /></td>
            <td><span asp-validation-for="Name"></span></td>
        </tr>
        <tr>
            <td><label asp-for="AreaId"></label></td>
            <td><select asp-for="AreaId" asp-items=@Model.Areas></select></td>
        </tr>
    </table>
    <input type="submit" value="Save" />
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
